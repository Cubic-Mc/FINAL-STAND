function on_message(self, message_id, message, sender)
	if message_id == hash("stop") then
		spawner = false
		go.delete(enemy)
		go.delete(frigate)
	end
	if messgae_id == hash("5_damage") then
		msg.post(frigate1, message_id) 
	end
end


	-- Remove this function if not needed
end

function update(self, dt)
	if spawner == true then 
		game1_timer = game1_timer + 1 * dt
		frigate1_timer = frigate1_timer + 1 * dt
		fighter1_timer = fighter1_timer + 1 * dt
		if game1_timer > 60 then
			if fighter1_timer >= 2 then
				enemy1 = factory.create("#fighter")
				local enemy1position = go.get_position()
				local to = enemy1position.y - 1000
				go.animate(enemy1, "position.y", go.PLAYBACK_ONCE_FORWARD, to, go.EASING_LINEAR, 6)
				fighter1_timer = 0
			end
		end
		if game1_timer > 90 then
			if frigate1_timer >= 3 then
				frigate1 = factory.create("#frigate")
				local enemyposition1 = go.get_position()
				local to = enemyposition1.y - 1000
				go.animate(frigate1, "position.y", go.PLAYBACK_ONCE_FORWARD, to, go.EASING_LINEAR, 10)
				frigate1_timer = 0
			end
		end
		local currentpos1 = go.get_position()
		currentpos1.x = math.random(20,940)
		go.set_position(currentpos1)
	end
end

